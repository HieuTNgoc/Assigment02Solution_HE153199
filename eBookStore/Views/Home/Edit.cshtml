@model BusinessObject.DTO.CreateUpdateUserDTO
<div id="content">
    <div id="content-left">
        <h3 style="font-weight: normal;">Welcome Back</h3>
        <h3>Account Management</h3>
        <ul>
            <a href="~/home/profile">
            <li> <h3>Personal information</h3></li></a>
        </ul>
    </div>
    <div id="content-right">
        <div class="path-admin">UPDATE A USER</b></div>
        <div class="content-main">
            @using (Html.BeginForm("Edit", "Home", FormMethod.Post, new { @id = "content-main-product" }))
            {
                <div class="content-main-1">
                    @Html.HiddenFor(m => m.UserId, new { @class = "hidden" })
                    @Html.HiddenFor(m => m.RoleId, new { @class = "hidden" })
                        <label>Email <span style="color: red;">*</span>:</label><br />
                    @Html.TextBoxFor(m => m.EmailAddress, new { @readonly = "readonly" })<br />
                        <label>Password <span style="color: red;">*</span>:</label><br />
                    @Html.PasswordFor(m => m.Password, new { value = Model.Password })<br />
                    <label>Source:</label><br />
                    @Html.TextBoxFor(m => m.Source, new { value = Model.Source })
                </div>
                <div class="content-main-1">
                        <label>FirstName <span style="color: red;">*</span>:</label><br />
                    @Html.TextBoxFor(m => m.FirstName, new { value = Model.FirstName })<br />
                        <label>MiddleName <span style="color: red;">*</span>:</label><br />
                    @Html.TextBoxFor(m => m.MiddleName, new { value = Model.MiddleName })<br />
                        <label>LastName <span style="color: red;">*</span>:</label><br />
                    @Html.TextBoxFor(m => m.LastName, new { value = Model.LastName })<br />

                </div>
                <div class="content-main-1">
                    
                        <label>Hire date <span style="color: red;">*</span>:</label><br />
                    <input type="date" asp-for="@Model.HireDate" value="@ViewData["HireDate"]" /><br />
                        <label>Publisher <span style="color: red;">*</span>:</label><br />
                    <select asp-for="@Model.PubId" asp-items="@(new SelectList(ViewBag.Pub, "PubId", "PublisherName"))" class="form-control"></select><br />
                    <input type="submit" value="Update" />
                </div>
            }
        </div>
    </div>
</div>